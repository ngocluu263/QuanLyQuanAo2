<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8dad8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activity.view.MainActivity">
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/linnearThemDonHang"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/textview_background"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/plus3"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Đơn Hàng"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linnearQLDonHang"
            android:layout_marginRight="4dp"
            android:background="@drawable/textview_background"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/clipboard1"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản Lý Đơn Hàng"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/linnearQuanLyMatHang"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/textview_background"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/settings"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản Lý Loại Mặt Hàng"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linnearQuanLyKho"
            android:layout_marginRight="4dp"
            android:background="@drawable/textview_background"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/warehouse"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản Lý Kho Mặt Hàng"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/linnearThongKe"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/textview_background"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/barchart"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống Kê"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linnearBieuDo"
            android:layout_marginRight="4dp"
            android:background="@drawable/textview_background"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/piechart"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biểu Đồ"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
