<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.handlingadd.ThemDonHangActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            style="@style/size16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại Mặt Hàng:"
            />
        <Spinner
            android:id="@+id/spinnerLoaiMatHang"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            style="@style/size16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Mặt Hàng:"
            />
        <Spinner
            style="@style/size16"
            android:id="@+id/spinnerTenMatHang"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            style="@style/size16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Lượng:"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="20dp"
                android:id="@+id/textViewTru"
                android:layout_height="wrap_content"
                android:hint="-"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:id="@+id/textViewSoLuong"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/textViewCong"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:hint="+"/>
        </LinearLayout>

        <TextView
            style="@style/size16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá"/>
        <TextView
            android:id="@+id/textViewGia"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/size16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày: "/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="08/01/1997"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/textViewNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Now"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/colorWhite"
            android:background="@drawable/vien_btn"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:id="@+id/buttonXoaTrang" />
        <Button
            android:textColor="@color/colorWhite"
            android:background="@drawable/vien_btn"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:id="@+id/buttonLuu" />
    </LinearLayout>

</RelativeLayout>
